<h1>Listing sound_boards</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sound_boards.each do |sound_board| %>
  <tr>
    <td><%= sound_board.name %></td>
    <td><%= sound_board.user_id %></td>
    <td><%= link_to 'Show', sound_board %></td>
    <td><%= link_to 'Edit', edit_sound_board_path(sound_board) %></td>
    <td><%= link_to 'Destroy', sound_board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

